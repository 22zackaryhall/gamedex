<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.ykrasik.gamedex.core.controller.exclude.ExcludeController">
    <center>
        <ListView fx:id="excludedPathsList">
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#addExcludedPath" text="Add" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#deleteExcludedPaths" text="Delete" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </ListView>
    </center>
</BorderPane>
