<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.ykrasik.gamedex.core.controller.GameController">
    <top>
        <ToolBar prefHeight="40.0">
            <items>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Search:" />
                        <TextField fx:id="gameSearchTextField" promptText="Search Games" GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets left="3.0" />
                            </GridPane.margin>
                        </TextField>
                        <Button fx:id="clearGameSearchButton" GridPane.columnIndex="2">
                            <graphic>
                                <ImageView preserveRatio="true">
                                    <image>
                                        <Image url="@../x_small_icon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <GridPane.margin>
                                <Insets left="3.0" />
                            </GridPane.margin>
                        </Button>
                    </children>
                </GridPane>
                <Region prefWidth="36.0" />
            <GridPane>
               <children>
                      <Button fx:id="filterGenreButton" text="Genre Filter" />
                  <TextField fx:id="filteredGenresTextField" disable="true" editable="false" GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets left="3.0" />
                     </GridPane.margin>
                  </TextField>
                  <Button fx:id="clearGenreFilterButton" GridPane.columnIndex="2">
                     <graphic>
                        <ImageView preserveRatio="true">
                           <image>
                              <Image url="@../x_small_icon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <GridPane.margin>
                        <Insets left="3.0" />
                     </GridPane.margin>
                  </Button>
               </children>
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               </rowConstraints>
            </GridPane>
                <Region prefWidth="36.0" />
            <GridPane>
               <children>
                  <Button fx:id="filterLibraryButton" text="Library Filter" />
                  <TextField fx:id="filteredLibraryTextField" disable="true" editable="false" GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets left="3.0" />
                     </GridPane.margin>
                  </TextField>
                  <Button fx:id="clearLibraryFilterButton" GridPane.columnIndex="2">
                     <graphic>
                        <ImageView preserveRatio="true">
                           <image>
                              <Image url="@../x_small_icon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <GridPane.margin>
                        <Insets left="3.0" />
                     </GridPane.margin>
                  </Button>
               </children>
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               </rowConstraints>
            </GridPane>
            <Region prefWidth="36.0" />
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Sort:" />
                        <ComboBox fx:id="gameSort" GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets left="3.0" />
                            </GridPane.margin>
                        </ComboBox>
                    </children>
                </GridPane>
                <Region prefWidth="36.0" />
                <Button fx:id="refreshLibrariesButton" defaultButton="true" mnemonicParsing="false" text="Refresh Libraries" />
            </items>
        </ToolBar>
    </top>
    <center>
        <SplitPane fx:id="content" dividerPositions="0.74" BorderPane.alignment="CENTER">
            <items>
                <TabPane>
                    <tabs>
                        <Tab closable="false" text="Wall">
                            <content>
                                <fx:include fx:id="gameWall" source="gameWall.fxml" />
                            </content>
                        </Tab>
                        <Tab closable="false" text="List">
                            <content>
                                <fx:include fx:id="gameList" source="gameList.fxml" />
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                <fx:include fx:id="gameSideBar" source="gameSideBar.fxml" />
            </items>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </SplitPane>
    </center>
</BorderPane>
