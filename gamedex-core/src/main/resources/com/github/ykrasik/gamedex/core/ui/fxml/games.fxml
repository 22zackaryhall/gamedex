<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.ykrasik.gamedex.core.controller.GameController">
    <top>
        <ToolBar prefHeight="40.0">
            <items>
                <GridPane>
                  <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  </columnConstraints>
                  <rowConstraints>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                   <children>
                          <Label text="Search:" />
                          <TextField fx:id="gameSearch" GridPane.columnIndex="1">
                         <GridPane.margin>
                            <Insets left="3.0" />
                         </GridPane.margin>
                      </TextField>
                          <Button fx:id="clearGameSearch" GridPane.columnIndex="2">
                              <graphic>
                                  <ImageView preserveRatio="true">
                                      <image>
                                          <Image url="@../x_small_icon.png" />
                                      </image>
                                  </ImageView>
                              </graphic>
                         <GridPane.margin>
                            <Insets left="3.0" />
                         </GridPane.margin>
                          </Button>
                   </children>
                </GridPane>
                <Region prefWidth="36.0" />
                <GridPane>
                  <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  </columnConstraints>
                  <rowConstraints>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                   <children>
                      <Label text="Sort:" />
                      <ComboBox fx:id="gameSort" GridPane.columnIndex="1">
                        <GridPane.margin>
                          <Insets left="3.0" />
                        </GridPane.margin>
                      </ComboBox>
                   </children>
                </GridPane>
                <Region prefWidth="36.0" />
                <Button fx:id="filterGenreButton" text="Genre Filter" />
                <Region prefWidth="36.0" />
                <Button fx:id="refreshLibraries" mnemonicParsing="false" text="Refresh Libraries" />
            </items>
        </ToolBar>
    </top>
    <center>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints halignment="RIGHT" hgrow="NEVER" maxWidth="-Infinity" minWidth="10.0" percentWidth="30.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TabPane GridPane.columnIndex="0">
                      <tabs>
                          <Tab closable="false" text="Wall">
                              <content>
                                  <fx:include fx:id="gameWall" source="gameWall.fxml" />
                              </content>
                          </Tab>
                          <Tab closable="false" text="List">
                              <content>
                                  <fx:include fx:id="gameList" source="gameList.fxml" />
                              </content>
                          </Tab>
                      </tabs>
                  </TabPane>
                  <Separator orientation="VERTICAL" GridPane.columnIndex="1" />
                  <fx:include GridPane.columnIndex="2" fx:id="gameSideBar" source="gameSideBar.fxml" />
               </children>
            </GridPane>
    </center>
</BorderPane>
